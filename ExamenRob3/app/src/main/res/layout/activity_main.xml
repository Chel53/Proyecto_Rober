<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.26"
        tools:ignore="Suspicious0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#03A9F4">

            <TextView
                android:id="@+id/titleMenuPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/nombre_nueva"
                android:text="Â¡BIENVENIDO!
                MENU DE OPCIONES"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.18"
        android:gravity="center"
        tools:ignore="Suspicious0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.widget.ImageButton
                android:id="@+id/btnMenuOptC1Huella"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="@drawable/cerraduradcs" />

            <TextView
                android:layout_width="205dp"
                android:layout_height="30dp"
                android:fontFamily="@font/nueva_anton"
                android:gravity="center"
                android:background="@color/white"
                android:text="Control de cerradura"
                android:textSize="20dp" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18"
        tools:ignore="Suspicious0dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.widget.ImageButton
                android:id="@+id/btnMenuOptC2Temperatura"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@drawable/lumenesdcs"
                android:text="Lumenes"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/nueva_anton"
                android:gravity="center"
                android:background="@color/white"
                android:text="Consultar Lumenes"
                android:textSize="20dp"
                android:layout_gravity="right"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18"
        tools:ignore="Suspicious0dp"
        android:gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <android.widget.ImageButton
                android:id="@+id/btnMenuOptC3LucesOff"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:text="Luces oficina"
                android:fontFamily="@font/nueva_anton"
                android:textColor="#0B0A0A"
                android:textSize="26sp"
                android:textAllCaps="false"
                android:background="@drawable/iluminaciondcs"
                app:layout_constraintEnd_toEndOf="@+id/btn4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn4"
                app:layout_constraintTop_toBottomOf="@+id/btn4" />

            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/nueva_anton"
                android:gravity="center"
                android:text="Control de luces"
                android:textSize="20dp"
                android:background="@color/white"/>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>