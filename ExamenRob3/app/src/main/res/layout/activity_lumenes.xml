<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado_fragmentos"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Lumenes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:background="@drawable/smoked_circuit_board"
        tools:ignore="Suspicious0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:fontFamily="@font/fff_tusj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTemperaturaCorp"
                android:text="Circuito 2: Temp. Corp. + Alarma Sonora"
                android:layout_margin="3dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />



        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.34">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageCircuitTempCorp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circuito_temp_corp_mlx90614"
                android:layout_margin="3dp"
                app:shapeAppearanceOverlay="@style/circular_image"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/labelTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/kelly_slab_regular"
            android:text="Timestamp de última actualización: "
            android:textColor="#AA8416"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.12"
        android:gravity="center">

        <TextView
            android:id="@+id/tVValorTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/bp_dots"
            android:text="--"
            android:textColor="#AA8416"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/labelLecturaTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/kelly_slab_regular"
            android:text="Última lectura de Temperatura Corp.: "
            android:textColor="#AA8416"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.12"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvValorTemperaturaCorp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/bp_dots"
                    android:text="--.- °C"
                    android:textColor="#AA8416"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center">

                <!-- Button :: RELOAD

                <ImageButton
                    android:id="@+id/btnReloadTemperature"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/reload_icon"
                    android:background="@drawable/gradiente_claro_botones"/>
                    -->


            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btnBackToHome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" Home "
            android:textSize="19sp"
            android:drawableStart="@drawable/home_page_icon"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_home"
            />

    </RelativeLayout>

</LinearLayout>