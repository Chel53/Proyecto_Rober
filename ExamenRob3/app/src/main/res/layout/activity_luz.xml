<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado_fragmentos"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Luz">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:background="@drawable/smoked_circuit_board"
        tools:ignore="Suspicious0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:fontFamily="@font/fff_tusj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleLucesOficina"
                android:text="Circuito 3: Luces Oficina"
                android:layout_margin="3dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                tools:ignore="InvalidId" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageCircuitLucesOficina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circuito_3_luces_oficina"
                android:layout_margin="3dp"
                app:shapeAppearanceOverlay="@style/circular_image"/>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical">

                <!-- Label : estatusLuces -->
                <TextView
                    android:id="@+id/labelEstatusLucesOficina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Estatus LUCES: "
                    android:textColor="#AA8416"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:fontFamily="@font/kelly_slab_regular"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgBtnEstatusLuz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@null"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center_vertical">

                <!--
    <ImageButton
        android:id="@+id/btnReloadLuz"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/switch2"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/gradiente_claro_botones"
        app:srcCompat="@drawable/reload_icon" />
        -->

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchLucesOficina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView"
                android:layout_margin="10dp"
                android:onClick="validarswitch2"
                android:text="Encender luces"
                android:textAlignment="center"
                android:textColor="#AA8416"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/kelly_slab_regular"
                tools:ignore="OnClick"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.19"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btnBackToHomeL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_home"
            android:drawableStart="@drawable/home_page_icon"
            android:text=" Home "
            android:textAllCaps="false"
            android:textSize="19sp"
            />

    </RelativeLayout>

</LinearLayout>
