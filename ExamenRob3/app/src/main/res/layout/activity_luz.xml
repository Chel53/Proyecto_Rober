<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Luz">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.2"
        tools:ignore="Suspicious0dp"
        android:background="@drawable/oficinaa">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBtnEstatusLuz"
                android:layout_width="55dp"
                android:layout_height="70dp"
                android:background="@drawable/lamparapag"
                tools:ignore="InvalidId"
                android:layout_marginLeft="20dp"
                android:alpha="1"


                />
            <ImageView
                android:id="@+id/imgBtnEstatusLuz1"
                android:layout_width="55dp"
                android:layout_height="70dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/lamparapag"
                tools:ignore="InvalidId" />
            <ImageView
                android:id="@+id/imgBtnEstatusLuz2"
                android:layout_width="55dp"
                android:layout_height="70dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/lamparapag"
                tools:ignore="InvalidId" />

        </LinearLayout>



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


                <!-- Label : estatusLuces -->
                <TextView
                    android:id="@+id/labelEstatusLucesOficina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/kelly_slab_regular"
                    android:text="LUMENES: "
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvValorLumenes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/kelly_slab_regular"
                    android:text="----"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />





            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center_vertical">

                <!--
    <ImageButton
        android:id="@+id/btnReloadLuz"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/switch2"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/gradiente_claro_botones"
        app:srcCompat="@drawable/reload_icon" />
        -->

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.18">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switchLucesSalon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView"
                android:layout_margin="10dp"
                android:onClick="validarswitch2"
                android:text="Encender luces"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/kelly_slab_regular"
                tools:ignore="OnClick"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.19"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btnBackToHomeL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_home"
            android:drawableStart="@drawable/homec"
            android:text=" Home "
            android:textAllCaps="false"
            android:textSize="60px"
            />

    </RelativeLayout>

</LinearLayout>
